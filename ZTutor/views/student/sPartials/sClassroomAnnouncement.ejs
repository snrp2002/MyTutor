<script>
    const primary = document.querySelector(".announcement_edit_primary");
    const secondary = document.querySelector(".announcement_edit_secondary");
    const Post = document.querySelector("#announcement_edit_post_btn");
    const Close = document.querySelector("#announcement_edit_cancel_btn");
    Post.addEventListener("click", (event)=>{
        changeBackward();
    })
    Close.addEventListener("click", (event)=>{
        changeBackward();
    })

    primary.addEventListener("click", (event)=>{
        changeForward();
    })

    function changeForward(){
        primary.style["display"] = "none";
        secondary.style["display"] = "block";
    }
    function changeBackward(){
        secondary.style["display"] = "none";
        primary.style["display"] = "flex";
    }

    const announcements = document.querySelectorAll(".past_announcement");
    announcements.forEach((announcement)=>{
        announcement.addEventListener("click", (event)=>{
            if(announcement.lastElementChild.style["display"] == 'block'){
                announcement.lastElementChild.style["display"] = 'none';
            }else{
                announcement.lastElementChild.style["display"] = 'block';
            }
        })
    })
</script>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teacher Verification | Admin</title>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
      integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <link rel="stylesheet" href="css/home.css" />
    <link rel="stylesheet" href="css/aStyle.css" />
  </head>
  <body>
    <!-- navbar starts --------------------------------------->
    <%- include('../partials/navbar'); %>

    <div class="home-page">
        <!-------------------- Left Sidebar -------------------->
        <%- include('aPartials/sidebar'); %>

    <!-- </div>

    <div class="admin-page"> -->
      <!-------------------- Right Sidebar -------------------->
      <div class="right-sidebar">
        <div class="right-sidebar-container">
          <div class="announcement-container">
            <div class="right-sidebar-heading">
              <img src="./images/admin/document.png" alt="document" />
              <h4>Teacher Verification</h4>
            </div>

            <div class="verify-page">
              <div class="right-sidebar-body verify-container">
                <div class="pending-document-card">
                  <div class="img-field">
                    <img src="https://assets.leetcode.com/users/avatars/avatar_1646054996.png" alt="">
                  </div>
                  <div class="pending-field">
                    <div class="ques">Name:</div>
                    <div class="ans">Arindam Halder</div>
                  </div>
                  <div class="pending-field">
                    <div class="ques">Email:</div>
                    <div class="ans">halderarindam10000@gmail.com</div>
                  </div>
                  <div class="pending-field">
                    <div class="ques">Mobile:</div>
                    <div class="ans">1234567890</div>
                  </div>
                  <div class="pending-field">
                    <div class="ques">Gender:</div>
                    <div class="ans">Male</div>
                  </div>
                  <div class="pending-field">
                    <div class="ques">Subject:</div>
                    <div class="ans">English</div>
                  </div>
                  <div class="button-box3">
                    <button class="accept-button">Accept</button>
                    <button class="reject-button">Reject</button>
                    <i class="fa-solid fa-expand expand-button" id="expandBtn"></i>
                  </div>
                </div>

                <!-- Modal to view pending teacher application in fullscreen -->
                <div id="myModal" class="modal">
                  <!-- Modal content -->
                  <div class="modal-content">
                    <span class="close">&times;</span>
                    <!-- <p>Some text in the Modal..</p> -->
                    <div class="modal-container">
                      <div class="pending-field">
                        <div class="ques">Name:</div>
                        <div class="ans">Arindam Halder</div>
                      </div>
                      <div class="pending-field">
                        <div class="ques">Email:</div>
                        <div class="ans">halderarindam10000@gmail.com</div>
                      </div>
                      <div class="pending-field">
                        <div class="ques">Mobile:</div>
                        <div class="ans">1234567890</div>
                      </div>
                      <div class="pending-field">
                        <div class="ques">Gender:</div>
                        <div class="ans">Male</div>
                      </div>
                      <div class="pending-field">
                        <div class="ques">Subject:</div>
                        <div class="ans">English</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>

      // modal to view teacher application starts ------------------------->
      const modal = document.getElementById("myModal");
      const btn = document.getElementById("expandBtn");
      const span = document.getElementsByClassName("close")[0];

      btn.onclick = function () {
        modal.style.display = "block";
      };
      span.onclick = function () {
        modal.style.display = "none";
      };
      window.onclick = function (event) {
        if (event.target == modal) {
          modal.style.display = "none";
        }
      };
      // modal to view teacher application ends --------------------------->
    </script>
  </body>
</html>
